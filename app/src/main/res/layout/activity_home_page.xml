<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A4973"
    tools:context="com.example.bookx.HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chat_btn"
            android:layout_width="50dp"
            android:layout_height = "47dp"
            android:textColor = "#FFFFFF"
            android:layout_marginTop="5dp"
            android:layout_marginLeft = "4dp"
            android:background="@drawable/ic_message"
            />
        <TextView
            android:id="@+id/txtUnread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/upload_btn"
            android:layout_height="wrap_content"
            android:layout_width="50dp"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/ic_menu_upload"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </TextView>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "#FFFFFF"
            android:fontFamily = "@font/rasa_semi_bold"
            android:layout_marginTop = "10dp"
            android:textSize="33dp"
            android:text="BookX" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </TextView>




        <Button
            android:id="@+id/account_btn"
            android:layout_width="50dp"
            android:layout_height = "50dp"
            android:fontFamily = "@font/rasa_regular"
            android:background="@drawable/ic_account"
            />

        <Button
            android:id="@+id/preferences_btn"
            android:layout_width="50dp"
            android:layout_height = "50dp"
            android:fontFamily = "@font/rasa_regular"
            android:background="@drawable/ic_prefences"
            android:layout_marginRight="3dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_bar"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_bar_shape">

        <ImageButton
            android:id="@+id/ibtFilter"
            android:layout_width="50sp"
            android:background="@drawable/ic_filter"
            android:layout_height="50sp"/>

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="18sp"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/ibtSearch"
            android:layout_width="50sp"
            android:background="@drawable/ic_search"
            android:layout_height="50sp"/>

<!--        <ImageButton-->
<!--            android:id="@+id/ibtSearchOption"-->
<!--            android:layout_width="50sp"-->
<!--            android:background="@drawable/ic_search_option"-->
<!--            android:layout_height="50sp"/>-->

    </LinearLayout>


    <ListView
        android:id="@+id/lvListing"
        android:listSelector="@drawable/listview_shape"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:layout_weight="6">

    </ListView>
    <TextView
        android:id="@+id/latitude"
        android:layout_width="0sp"
        android:layout_height="0sp"/>
    <TextView
        android:id="@+id/longitude"
        android:layout_width="0sp"
        android:layout_height="0sp"/>
</LinearLayout>
