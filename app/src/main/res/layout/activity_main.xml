<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#90DBDB"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcome_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="130dp"
        android:text="Welcome to BookX,"
        android:fontFamily = "@font/RasaBold"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="193dp" />

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp"
        android:text="Log-In/Sign-Up below to use our platform"
        android:fontFamily = "@font/RasaRegular"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="174dp"
        android:layout_marginBottom="457dp"
        android:text="Email"
        android:fontFamily = "@font/RasaRegular"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="301dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:fontFamily = "@font/RasaRegular"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="328dp" />

    <TextView
        android:id="@+id/password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="159dp"
        android:layout_marginTop="392dp"
        android:text="Password"
        android:textColor="#FFFFFF"
        android:fontFamily = "@font/RasaRegular"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="407dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="251dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:fontFamily = "@font/RasaRegular"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="456dp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="170dp"
        android:text="Log In"
        android:fontFamily = "@font/RasaBold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        tools:layout_editor_absoluteY="534dp" />

    <TextView
        android:id="@+id/signhere_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="610dp"
        android:text="Don't have an account? Sign up "
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily = "@font/RasaRegular"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="605dp" />

    <Button
        android:id="@+id/signhere_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="44dp"
        android:fontFamily = "@font/RasaRegular"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#FFFFFF"
        android:text="HERE" />


</android.widget.RelativeLayout>
