<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90DBDB"
    tools:context="com.example.bookx.ListingPage">

    <TextView
        android:id="@+id/listing_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="176dp"
        android:textColor="#FFFFFF"
        android:fontFamily = "@font/rasa_bold"
        android:text="New Listing" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily = "@font/rasa_regular"
        android:text="Cancel" />

    <Button
        android:id="@+id/post_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily = "@font/rasa_regular"
        android:layout_alignParentEnd="true"
        android:text="Post" />

    <EditText
        android:id="@+id/bookname_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:fontFamily = "@font/rasa_regular"
        android:text="Book Name" />

    <EditText
        android:id="@+id/isbn_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:fontFamily = "@font/rasa_regular"
        android:textColor="#FFFFFF"
        android:text="ISBN Number" />

    <Button
        android:id="@+id/uploadisbn_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:fontFamily = "@font/rasa_regular"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="11dp"
        android:text="Upload" />

    <EditText
        android:id="@+id/class_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="231dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:fontFamily = "@font/rasa_regular"
        android:textColor="#FFFFFF"
        android:text="Class Name" />

    <EditText
        android:id="@+id/price_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="298dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:fontFamily = "@font/rasa_regular"
        android:textColor="#FFFFFF"
        android:text="Price" />

    <EditText
        android:id="@+id/description_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="313dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:fontFamily = "@font/rasa_regular"
        android:textColor="#FFFFFF"
        android:text="Description" />

    <TextView
        android:id="@+id/location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="250dp"
        android:fontFamily = "@font/rasa_regular"
        android:textColor="#FFFFFF"
        android:text="Show your location?" />

    <Button
        android:id="@+id/Ylocation_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="96dp"
        android:fontFamily = "@font/rasa_regular"
        android:layout_marginBottom="163dp"
        android:text="Yes" />

    <Button
        android:id="@+id/Nlocation_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="97dp"
        android:fontFamily = "@font/rasa_regular"
        android:layout_marginBottom="163dp"
        android:text="No" />
</android.widget.RelativeLayout>