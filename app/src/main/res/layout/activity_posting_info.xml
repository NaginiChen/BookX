<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A4973"
    tools:context="com.example.bookx.PostingInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "#FFFFFF"
            android:fontFamily = "@font/rasa_bold"
            android:textSize="25dp"
            android:layout_marginLeft = "35dp"
            android:text="Person Name" />

        <TextView
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_weight="2">
        </TextView>

        <Button
            android:id="@+id/btnInterested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="#366083"
            android:text="Message"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "#FFFFFF"
        android:text = "Date"
        android:fontFamily = "@font/rasa_regular"
        android:layout_marginLeft="35dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tvPostName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "#FFFFFF"
        android:text="Post Name"
        android:textSize="18sp"
        android:layout_marginLeft="35dp"
        android:fontFamily = "@font/rasa_bold"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/tvNameDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "#FFFFFF"
        android:text="insert name"
        android:fontFamily = "@font/rasa_regular"
        android:layout_marginLeft="35dp"
        android:layout_marginTop = "15dp"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tvClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "#FFFFFF"
        android:layout_marginTop="20dp"
        android:text="Class"
        android:layout_marginLeft="35dp"
        android:textSize="18sp"
        android:fontFamily = "@font/rasa_bold"
        />

    <TextView
        android:id="@+id/tvClassDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "#FFFFFF"
        android:layout_marginTop="20dp"
        android:text="insert class"
        android:fontFamily = "@font/rasa_regular"
        android:layout_marginLeft="35dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:text="Price"
        android:fontFamily = "@font/rasa_bold"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tvPriceDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "#FFFFFF"
        android:layout_marginTop="20dp"
        android:fontFamily = "@font/rasa_regular"
        android:layout_marginLeft="35dp"
        android:text="insert price"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvISBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:text="ISBN"
        android:fontFamily = "@font/rasa_bold"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tvISBNDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "#FFFFFF"
        android:layout_marginTop="20dp"
        android:fontFamily = "@font/rasa_regular"
        android:layout_marginLeft="35dp"
        android:text="insert ISBN"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:text="Description"
        android:fontFamily = "@font/rasa_bold"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tvISBNDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "#FFFFFF"
        android:layout_marginTop="20dp"
        android:fontFamily = "@font/rasa_regular"
        android:layout_marginLeft="35dp"
        android:text="insert description"
        android:textSize="18sp"
        />

</LinearLayout>
