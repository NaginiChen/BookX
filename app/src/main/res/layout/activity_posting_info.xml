<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97CAE8"
    tools:context="com.example.bookx.PostingInfo">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnInterested"
                android:layout_width="115dp"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:background="#366083"
                android:layout_gravity="right"
                android:layout_margin="10sp"
                android:text="Interested?"
                android:textColor="#FFFFFF" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0sp"
                    android:layout_margin="10sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seller:"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPostSeller"
                    android:layout_margin="10sp"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="insert seller"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtPostDate"
                    android:layout_width="0sp"
                    android:layout_margin="10sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="insert date"
                    android:textSize="18sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvPostName"
                android:layout_width="wrap_content"
                android:layout_margin="10sp"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:text="Book Title"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtPostBookTitle"
                android:layout_margin="10sp"
                android:layout_width="wrap_content"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:text="insert name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvClass"
                android:layout_width="wrap_content"
                android:layout_margin="10sp"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:text="Course"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtPostCourse"
                android:layout_width="wrap_content"
                android:layout_margin="10sp"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:text="insert class"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_margin="10sp"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:text="Price"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPostPrice"
                android:layout_width="wrap_content"
                android:layout_height="0sp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="insert price"
                android:textSize="18sp" />





            <TextView
                android:id="@+id/tvISBN"
                android:layout_width="wrap_content"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:text="ISBN"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/txtPostISBN"
                android:layout_width="wrap_content"
                android:layout_margin="10sp"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:text="insert isbn"
                android:textSize="18dp" />



            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_margin="10sp"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:text="Description"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPostDesc"
                android:layout_width="wrap_content"
                android:layout_margin="10sp"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:text="insert description"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtPostSellerAddress"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                />

            <fragment
                android:id="@+id/fragMap"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="400sp"
                android:layout_weight="1">

            </fragment>
        </LinearLayout>

</ScrollView>